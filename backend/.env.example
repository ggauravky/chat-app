# ── MongoDB ─────────────────────────────────────────────────────────────────
# Your MongoDB Atlas connection string (mongodb+srv://...)
MONGODB_URI=

# ── Auth ─────────────────────────────────────────────────────────────────────
# Random secret used to sign JWT tokens (use a long random string)
JWT_SECRET=

# ── Cloudinary (image uploads) ────────────────────────────────────────────────
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ── Server ────────────────────────────────────────────────────────────────────
PORT=5001
NODE_ENV=development

# ── Split deployment (optional) ───────────────────────────────────────────────
# Set this when the frontend is deployed separately (e.g. Vercel)
# Example: https://zapp.vercel.app
FRONTEND_URL=
